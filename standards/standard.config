// If there is a hyphen, we only run one scenario (and for sc_input only get number before hyphen)
// If there is no hyphen, run all eight scenarios at once
params.sc_input = (params.standard =~ /-/ ? "standards/reference/${params.standard.split('-')[0]}*.rds" : "standards/reference/${params.standard}*.rds")
params.sp_input = (params.standard =~ /(-|gold)/ ? "standards/$params.standard/*.rds" : "standards/$params.standard-[0-9]/*.rds")
params.annot = "celltype"
params.sampleID = "none"
