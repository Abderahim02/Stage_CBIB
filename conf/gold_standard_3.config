params {
    matched = 'true'
    file_type = 'rds'
    sc_input = (params.matched ? "standards/reference/gold_standard_3_12*.${params.file_type}" : "standards/reference/gold_standard_3_19*.${params.file_type}")
    sp_input = "standards/gold_standard_3/*.${params.file_type}"
    annot = "celltype"
    sampleID = "donor"
    skip_metrics = (params.file_type =~ /rds/ ? false : true)
    runID_props = (params.matched ? "_12celltypes" : "_19celltypes")
    runID_metrics = (params.matched ? "_12celltypes" : "_19celltypes")
    deconv_args = [cell2location: [build: "", fit:""],
                stereoscope: "",
                spotlight: "--logfc.threshold 1 --min.pct 0.9 --cl_n 50 --min_cont 0.09",
                destvi: [build: "", fit: ""],
                music: "",
                stride: "--normalize",
                seurat: "--norm.method sct"]
  
}

process {
    withName: runSTRIDE {
        memory = { "${16 + (task.attempt * 16)} GB" }
        time = { "${task.attempt * 12}h" }
    }
}