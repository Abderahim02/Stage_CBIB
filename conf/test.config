workDir = 'scripts/work'
docker.enabled = true

params {
    rootdir = '/'

    sc_input = "unit-test/test_sc_data.rds"
    sp_input = "unit-test/test_sp_data.rds"

    epoch_build = 50
    epoch_fit = 100

    outdir = [props: "deconv_proportions/",
              metrics: "results/",
              synvis: "synthetic_data/"]

    deconv_args = [spotlight: "--logfc.threshold 0.25 --min.pct 0.1 --cl_n 20 --hvg 1500 --min_cont 0.3"]
}
