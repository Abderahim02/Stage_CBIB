params {
  file_type = "rds"
  ds_type = "spatial" // spatial, 1001cells, 5000cells, or 9999cells
  if (params.ds_type =~ /spatial/){
    sc_input = "/data/gent/vo/000/gvo00070/vsc43831/downsampling/brain_cortex_ref_5000cells.${params.file_type}"
    sp_input = "/data/gent/vo/000/gvo00070/vsc43831/downsampling/downsampled_spatial_datasets/*.${file_type}"
  } else {
    sc_input = "/data/gent/vo/000/gvo00070/vsc43831/downsampling/brain_cortex_ref_${ds_type}.${params.file_type}"
    sp_input = "/data/gent/vo/000/gvo00070/vsc43831/downsampling/downsampled_spatial_datasets/brain_cortex_art_uni_distinct_1000spots_15000_genes.${file_type}"
  }
  
  annot = "celltype"
  sampleID = "none"
  verbose = true
  skip_metrics = true
  spatialdwls_markers = { "--n_topmarkers ${task.attempt * 100}" }
  deconv_args = [cell2location: [build: "", fit:""],
                 stereoscope: "",
                 spotlight: "--conserve.memory TRUE --logfc.threshold 1 --min.pct 0.9 --cl_n 50 --min_cont 0.09",
                 destvi: [build: "-e 5000", fit: "-e 5000 -b 64"],
                 music: "",
                 stride: "--normalize",
                 seurat: "--norm.method sct"]
  runID_props = params.ds_type =~ /spatial/ ? "" : "_${ds_type}"
}

