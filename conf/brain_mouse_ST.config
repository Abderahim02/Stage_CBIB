params {
  // define ref_type as 10x or ss
  ref_type = "10x"
  file_type = "rds"

  sc_input = "/data/gent/vo/000/gvo00070/vsc43831/rds/ctxhip${params.ref_type}_*genes.${file_type}"
  sp_input = "/data/gent/vo/000/gvo00070/vsc43831/rds/brain_ortiz/*.${file_type}"
  annot = "subclass_label"
  sampleID = "external_donor_name_id"
  verbose = true
  skip_metrics = true
  deconv_args = [cell2location: [build: "", fit:""],
                 stereoscope: "-hvg 5000 -sub 250",
                 spotlight: "--conserve.memory TRUE --logfc.threshold 1 --min.pct 0.9 --cl_n 50 --min_cont 0.09",
                 destvi: [build: "", fit: ""],
                 music: "--pct 0.05",
                 stride: "--normalize --ntopics 42",
                 seurat: "--norm.method sct --conserve.memory TRUE --reduction rpca"]
  
  runID_props = "_${params.ref_type}"
}

process {
  withName: buildStereoscopeModel {
      memory = "96 GB"
      time = "48h"
  }
  withName: fitStereoscopeModel {
      memory = "96 GB"
      time = "20h"
  }

  withName: convert_sc {
      memory = { "${16 + (task.attempt * 16)} GB" }
  }

  withName: convert_sp {
      memory = "2 GB"
  }

  withName: buildCell2locationModel {
      memory = { "${32 + (task.attempt * 32)} GB" }
      time = { "${task.attempt * 4}h" }
  }

  withName: fitCell2locationModel {
      memory = { "${32 + (task.attempt * 32)} GB" }
      time = { "${task.attempt * 4}h" }
  }

  withName: runMusic {
      memory = { "${64 + (task.attempt * 32)} GB" }
      time = "2h"
  }

  withName: runNNLS {
      memory = { "${32 + (task.attempt * 16)} GB" }
      time = { "${task.attempt * 2}h" }
  }

  withName: runRCTD {
      memory = { "${32 + (task.attempt * 16)} GB" }
      cpus = 4
      time = { "${task.attempt * 4}h" }
  }

  withName: runSpatialDWLS {
      memory = { "${64 + (task.attempt * 32)} GB" }
      time = { "${task.attempt * 4}h" }
  }

  withName: runSpotlight {
      memory = { "${64 + (task.attempt * 32)} GB" }
      time = "48h"
  }

  withName: buildDestVIModel {
      memory = { "${32 + (task.attempt * 32)} GB" }
      time = { "${task.attempt * 12}h" }
  }

  withName: fitDestVIModel {
      memory = { "${16 + (task.attempt * 16)} GB" }
      time = { "${task.attempt * 4}h" }
  }

  withName: runTangram {
      memory = { "${32 + (task.attempt * 16)} GB" }
      time = { "${task.attempt * 4}h" }
  }

  withName: runDSTG {
      memory = { "${32 + (task.attempt * 32)} GB" }
      time = { "${task.attempt * 24}h" }
  }

  withName: runSeurat {
      memory = { "${32 + (task.attempt * 32)} GB" }
      time = { "${task.attempt * 8}h" }
  }


  withName: runSTRIDE {
      memory = { "${32 + (task.attempt * 16)} GB" }
      time = { "${task.attempt * 24}h" }
  }

  withName: buildSTRIDEModel {
      memory = { "${32 + (task.attempt * 16)} GB" }
      time = { "${task.attempt * 24}h" }
  }

  withName: fitSTRIDEModel {
      memory = { "${16 + (task.attempt * 16)} GB" }
      time = { "${task.attempt * 2}h" }
  }
}